extends ../layouts/main-layout

block styles 
  title New password

block content 
  .container.d-flex.a-center.flex-column
    h1.my-2 Please create a new password
    form.text-center(action=`/user/reset/${token}`, method="post") 
      input.mb-1.form-control(type="password", name="userPassword" placeholder="Password:")
      input(type="hidden" name="_csrf" value=csrfToken)
      button.btn(type="submit") Create password
    
          
  