extends ../layouts/main-layout

block styles 
  title Login page

block content 
  .container.d-flex.a-center.flex-column
    h1.my-2 Please log in:
    form.text-center(action="/user/login", method="post") 
      input.mb-1.form-control(type="text" name="userName" placeholder="Name:")
      input.mb-1.form-control(type="password", name="userPassword" placeholder="Password:")
      input(type="hidden" name="_csrf" value=csrfToken)
      button.btn(type="submit") Login
      p.my-1.text-center Forgot your password? 
        a(href="/user/reset")  
          strong Reset now!
  